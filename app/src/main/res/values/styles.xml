<resources>

    <style name="LightTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textColorPrimary">@color/colorText</item>
        <item name="android:alertDialogTheme">@style/AlertDialogStyle</item>
    </style>

    <style name="DarkTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimarySecondary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDarkSecondary</item>
        <item name="colorAccent">@color/colorAccentSecondary</item>
        <item name="textColorPrimary">@color/colorTextSecondary</item>
        <item name="android:alertDialogTheme">@style/AlertDialogStyleSecondary</item>
    </style>

    <style name="AlertDialogStyle">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

    <style name="AlertDialogStyleSecondary">
        <item name="android:windowBackground">@color/colorPrimarySecondary</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

</resources>
